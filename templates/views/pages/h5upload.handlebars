{{#block 'head'}}
<link rel="stylesheet" type="text/css" href="/styles/h5upload.css">
<link rel="stylesheet" type="text/css" href="/scripts/vendors/cropper/cropper.min.css">
{{/block}}
{{#block 'body'}}
<section class="box">
    <h1 class="title">基于Html5的图片上传组件</h1>
    <form method="post" action="/api/upload">
        <p>您可以拖拽文件到这里<p>
        <div id="dropbox" class="dropbox">
            <img src="" alt="" class="preview">
        </div>
        <p>您也可以从文件夹中选择文件</p>
        <div class="dropbox">
            <img src="" alt="" class="preview">
            <input id="fileSelect" type="file" name="uploadFile" />
        </div>
        <div class="result" id="compress">
            <p>最终压缩结果</p>
        </div>
        <br>
        <input type="submit" value="Post 上传表单">
    </form>
</section>
{{/block}}
{{#block 'footer'}}
<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
<script src="/scripts/vendors/exif-js.js"></script>
<script src="/scripts/vendors/cropper/cropper.min.js"></script>
<script src="/scripts/imageUpload/h5upload.js"></script>
{{/block}}